<script>
      // Setting Random User Cursor Gif
      $(document).ready(function(){
        var random = Math.floor(Math.random() * 2) + 0;
        var imgs = [
            '../img/mario_star.png',
            '../img/rainbowstar_small.png',
        ];
        $('#custom').css('cursor', 'url(' + imgs[random] + ')'+','+'auto');

        // Sets Hover Cursor(Pointer) as well
        $("*").each(function() {
            var cur = $(this);
            if(cur.css("cursor") == "pointer") {
            cur.css("cursor", 'url(' + imgs[random] + ')'+','+'auto');
            }
        });
        
        // Setting Other Users cursors to different random images
        var imgs2 = [
            '../img/taco_cat_small.gif',
            '../img/toast_cat_small.gif',
            '../img/nyan_squirrell_small.gif',
            '../img/donutcat_small.gif',
        ];
        $.initialize(".pointer", function(){
            $(this).css('background', 'url(' + imgs2[Math.floor(Math.random() * 4) + 0] + ')');
            $(this).css('background-repeat', 'no-repeat');
        })

    })
</script>

